
<%- include("../partials/header")%> 
<%- include("../partials/navbar")%> 

<div class="container " style="margin-top: 72px; width: 1234px;">
    <h1 class="text-center mb-4">Transaction History</h1>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            
            <th scope="col">Sender Name</th>
            <th scope="col">Receiver Name</th>
            <th scope="col">Amount</th>
            <th scope="col">Date & Time</th>
          </tr>
        </thead>
        <tbody>
          <%for (let h of history){%> 
            <% if (history.length == 0) { %>
              <h1>No transaction done yet</h1>
            <% } %>
            <% i = 1 %> 
          <tr>
           
            <td><%= h.sendername %></td>
            <td><%= h.receivername %></td>
            <td><%= h.amount %></td>
            <td><%= h.date %></td>
          </tr>
          
          <% } %> 
        </tbody>
      </table>

      <a href="/" class="btn btn-outline-secondary" id="back">Back</a>
</div>

<%- include("../partials/footer")%> 